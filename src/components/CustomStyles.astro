---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Lime Green + Black Portfolio Theme */
    --aw-color-primary: rgb(198 255 0);
    --aw-color-secondary: rgb(178 230 0);
    --aw-color-accent: rgb(198 255 0);

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(229 229 229);
    --aw-color-text-muted: rgb(180 180 180);
    --aw-color-bg-page: rgb(0 0 0);

    --aw-color-bg-page-dark: rgb(0 0 0);

    ::selection {
      background-color: rgb(198 255 0);
      color: rgb(0 0 0);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Lime Green + Black Portfolio Theme */
    --aw-color-primary: rgb(198 255 0);
    --aw-color-secondary: rgb(178 230 0);
    --aw-color-accent: rgb(198 255 0);

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(229 229 229);
    --aw-color-text-muted: rgb(180 180 180);
    --aw-color-bg-page: rgb(0 0 0);

    ::selection {
      background-color: rgb(198 255 0);
      color: rgb(0 0 0);
    }
  }
</style>
